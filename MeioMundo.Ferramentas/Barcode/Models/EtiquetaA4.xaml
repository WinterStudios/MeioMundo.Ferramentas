<UserControl x:Class="MeioMundo.Ferramentas.Barcode.Models.EtiquetaA4"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeioMundo.Ferramentas.Barcode.Models"
             xmlns:barcode="clr-namespace:MeioMundo.Ferramentas.Barcode"
             xmlns:models="clr-namespace:MeioMundo.Ferramentas.Barcode.Models"
             mc:Ignorable="d" 
             Width="21cm" Height="29.7cm"
             Background="White" Foreground="Black"
      >
    <Border>
        <ListView x:Name="ListView_Etiquetas" ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=local:EtiquetaA4}, Path=Etiquetas}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="Red" Padding="5cm">
                        <ContentPresenter/>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Border>
</UserControl>
