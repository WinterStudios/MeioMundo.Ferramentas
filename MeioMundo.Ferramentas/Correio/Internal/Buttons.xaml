<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/MeioMundo.Ferramentas;component/Resources/Icons.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="BTN.CUT" TargetType="Button">
        <Setter Property="Height" Value="26"/>
        <Setter Property="Content">
            <Setter.Value>
                <DockPanel>
                    <Image Source="{DynamicResource Image.Cut}" Height="20" Width="20" Margin="4,0" Stretch="Fill" RenderOptions.EdgeMode="Unspecified" RenderOptions.BitmapScalingMode="HighQuality" />
                    <TextBlock Margin="4" Text="Cortar" VerticalAlignment="Center"/>
                </DockPanel>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="BTN.COPY" TargetType="Button">
        <Setter Property="Height" Value="26"/>
        <Setter Property="Content">
            <Setter.Value>
                <DockPanel>
                    <Image Source="{DynamicResource Image.Paste}" Height="20" Width="20" Margin="4,0" Stretch="Fill" RenderOptions.EdgeMode="Unspecified" RenderOptions.BitmapScalingMode="HighQuality" />
                    <TextBlock Margin="4" Text="Copiar" VerticalAlignment="Center"/>
                </DockPanel>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="BTN.PASTE" TargetType="Button">
        <Setter Property="Height" Value="26"/>
        <Setter Property="Content">
            <Setter.Value>
                <DockPanel>
                    <Image Source="{DynamicResource Image.Paste}" Height="20" Width="20" Margin="4,0" Stretch="Fill" RenderOptions.EdgeMode="Aliased" RenderOptions.BitmapScalingMode="NearestNeighbor" />
                    <TextBlock Margin="4" Text="Colar" VerticalAlignment="Center"/>
                </DockPanel>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="BTN.TEXT" TargetType="{x:Type Button}">
        <Setter Property="Height" Value="24"/>
        <Setter Property="Width" Value="24"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="RenderOptions.EdgeMode" Value="Aliased"/>
        <Setter Property="RenderOptions.BitmapScalingMode" Value="Fant"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True"> 
                <Setter Property="BorderThickness" Value="0"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="BTN.BOLD_TEXT" TargetType="{x:Type Button}" BasedOn="{StaticResource BTN.TEXT}">
        <Setter Property="Content">
            <Setter.Value>
                <Border VerticalAlignment="Center" HorizontalAlignment="Center" Padding="4">
                    <Image Source="/MeioMundo.Ferramentas;component/Assets/Icons/Text/text_bold.png" />
                </Border>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="BTN.ITALIC_TEXT" TargetType="{x:Type Button}" BasedOn="{StaticResource BTN.TEXT}">
        <Setter Property="Content">
            <Setter.Value>
                <Border VerticalAlignment="Center" HorizontalAlignment="Center" Padding="4">
                    <Image Source="/MeioMundo.Ferramentas;component/Assets/Icons/Text/text_italic.png"/>
                </Border>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="BTN.SUB_TEXT" TargetType="{x:Type Button}" BasedOn="{StaticResource BTN.TEXT}">
        <Setter Property="Content">
            <Setter.Value>
                <Border VerticalAlignment="Center" HorizontalAlignment="Center" Padding="4">
                    <Image Source="/MeioMundo.Ferramentas;component/Assets/Icons/Text/text_underline.png"/>
                </Border>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>