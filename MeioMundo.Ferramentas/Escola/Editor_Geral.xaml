<UserControl x:Class="MeioMundo.Ferramentas.Escola.Editor_Geral"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:MeioMundo.Ferramentas.Escola"
             xmlns:internal="clr-namespace:MeioMundo.Ferramentas.Escola.Internal"
             
             d:DataContext="{d:DesignInstance Type=local:Editor_Geral}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="EditoresGeraisEmuns" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="internal:UC_EditoresGerais"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <GroupBox Header="Mode Editor" Width="125">
                <ComboBox x:Name="UC_ComboBox_EditorMode" SelectedIndex="0" ItemsSource="{Binding Source={StaticResource EditoresGeraisEmuns}}" SelectionChanged="UC_ComboBox_EditorMode_SelectionChanged"/>
            </GroupBox>
        </StackPanel>
        <Grid x:Name="UC_Grid_Ano" Grid.Row="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <GroupBox Header="Ano">
                    <ComboBox>

                    </ComboBox>
                </GroupBox>
            </StackPanel>
            <DataGrid Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Disciplina"/>
                    <DataGridTextColumn Header="Livro"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid x:Name="UC_Grid_Escolas" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="32" Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ListBox Grid.Row="1">

                </ListBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

    