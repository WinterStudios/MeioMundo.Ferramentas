             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeioMundo.Ferramentas.Voucher.Modelo"
             mc:Ignorable="d" 
             
             Width="21cm" Height="9.9cm"
             >
    <UserControl.Resources>
        <SolidColorBrush x:Key="ValueColor" Color="#223a7a"/>
    </UserControl.Resources>
    <Border>
        <Grid>
            <Image Source="/MeioMundo.Ferramentas;component/Voucher/Modelo/Voucher_New.png" />
            <StackPanel Margin="0,0,1cm,1cm" HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal">
                <TextBlock x:Name="textValue" Foreground="{DynamicResource ValueColor}" FontSize="100pt" FontFamily="Segoe UI" FontWeight="Bold" VerticalAlignment="Bottom"/>
                <TextBlock VerticalAlignment="Bottom" Foreground="{DynamicResource ValueColor}" Text="€" FontSize="50pt" FontFamily="Segoe UI" FontWeight="Bold" Margin="0,0,0,0.4cm" />
            </StackPanel>
            
        </Grid>
    </Border>
</UserControl>
